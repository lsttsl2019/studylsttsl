<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/home_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="홍천"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/img_cardview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="0/0 - PM 02:00"
        app:layout_constraintBottom_toBottomOf="@id/home_title"
        app:layout_constraintLeft_toRightOf="@id/home_title"
        app:layout_constraintTop_toTopOf="@id/home_title" />

    <androidx.cardview.widget.CardView
        android:id="@+id/img_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_title">

        <ImageView
            android:id="@+id/home_img"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/img01" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>